{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "node --max-old-space-size=256 server.js",
    "healthcheckPath": "/ping",
    "restartPolicyType": "ALWAYS",
    "restartPolicyMaxRetries": 5
  }
}
