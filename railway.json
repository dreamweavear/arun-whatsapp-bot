{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "node server.js",  // ðŸ‘ˆ Memory limit HATAO
    "healthcheckPath": "/",  // ðŸ‘ˆ /ping se / par change karein
    "healthcheckTimeout": 60,  // ðŸ‘ˆ YEH ADD KAREN
    "restartPolicyType": "ON_FAILURE",  // ðŸ‘ˆ ALWAYS se change
    "restartPolicyMaxRetries": 3
  }
}
